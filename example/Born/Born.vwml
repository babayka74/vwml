module BornSimulation {
	Ew ias (
		out ias communication.out.write;
		in ias communication.in.read;
		inc ias services.math.inc;
		Id ias 0;

		AAA ias (
			k ias 0;
		);

		P1 ias (
			Id ias 0;
			Life ias (
				((I am here Id~) Ew.out~) Do
				(AAA (AAA Id~)) Born
				((AAA Id~)->k Id~)^
				((k is (AAA Id~)->k~) Ew.out~) Do
				((l Id~) Id~)^
				((The l is (l Id~)~) Ew.out~) Do
				1000 Relax
				((AAA Id~)) Release
			);		
			lifeterm = (
				Life~ Exe
				((Id~ says bye) Ew.out~) Do
			) Exe
		);

		Life ias (
			(StopBorn true) ias (
				((Cloner stops) Ew.out~) Do
			);
			(StopBorn false) ias (
				(Ew.Id ((Ew.Id~) Ew.inc~) Do)^
				(P1 (P1 Ew.Id~) defer) Born
				((P1 Ew.Id~)->Id Ew.Id~)^
				((P1 Ew.Id~)) Activate
				Life~ Exe
			);
			(StopBorn (Ew.Id~ 5) Ident)~ Exe
		);

		source lifeterm = (
			Life~ Exe
			15000 Relax
		) Exe
	);
}
                                  